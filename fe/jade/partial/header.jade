header   
    a(href='/')
        div(id='logo')
            img(src='/img/logo.png')
            p climb
    if title
        h2 #{title}
        
    {{#if authenticated}}
    div(class='login',id='logged-in')
        a(href='/logout')
            p logged in as 
                span(class='highlight') {{ authenticated.name }}
            img(src="{{ authenticated.pic }}")
    {{else}}
    div(class='login',id='login')
        a(href='/auth/github')
            p Login with Github
    {{/if}}