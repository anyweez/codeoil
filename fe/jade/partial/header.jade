header   
    a(id='logo', href='/')
        img(src='/img/logo.png')
        h1 code oil
    if title
        h2 #{title}
        
    {{#if authenticated}}
    div(id='logged-in')
        a(href='/profile')
            p logged in as 
                span(class='highlight') {{ authenticated.name }}
            img(src="{{ authenticated.pic }}")
    {{else}}
    div(id='login')
        a(href='/auth/github')
            p Login with Github
            img(src="https://cdn4.iconfinder.com/data/icons/iconsimple-logotypes/512/github-512.png")
    {{/if}}